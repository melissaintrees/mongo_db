<div class="album py-5">
  <div class="container">

    <div class="row d-flex">
      {{#each articles}} {{#unless this.saved}}
      <div class="col-md-4 d-flex">

        <div class="card bg-dark mb-4 box-shadow">

          <div class="card-body">

            <h2 class="card-title">{{this.title}}</h2>
            <p class="summary card-text">{{this.summary}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <form method="POST" action="/saved/{{this.id}}?_method=PUT">
                  <button type="submit" class="save btn btn-sm btn-outline-secondary">Save Article</button>
                </form>

              </div>
              <small class="text-muted">
                <a href="{{this.url}}" id="savedLink" target="_blank">Read</a>
              </small>
            </div>
          </div>

        </div>
      </div>
      {{/unless}} {{/each}}
    </div>

  </div>
</div>
