<header>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">NPR's The Record Web Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/saved">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/scrape">Scrape New Articles</a>
                </li>
            </ul>
        </div>
    </nav>
</header>


<div class="container">

    <div class="row">
        <div class="col-1"></div>

        <div class="col-9">
            <div id="articles">
                {{#each saved}}

                <h2>
                    <a href="{{this.url}}" id="savedLink">{{this.title}}</a>
                </h2>

                <p>{{this.summary}}</p>

                <form method="POST" action="/articles/delete/{{this.id}}?_method=DELETE">
                    <button type="submit" class="delete-artic btn btn-danger" data-id={{this._id}}>Delete Saved Article</button>
                </form>

                <form method="POST" action="/notes/save/{{this.notes}}?_method=POST">
                    <button type="button" class="add-note btn btn-default" data-toggle="modal" data-target="#myModal{{this.id}}">Add a Note</button>
                </form>
                {{!-- from the w3 schools: https://www.w3schools.com/bootstrap/bootstrap_modal.asp --}} {{/each}}

                <!-- Modal -->
                {{#each saved}}
                <div class="modal fade" tabindex="-1" id="myModal{{this.id}}" role="dialog">
                    <div class="modal-dialog" role="document">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title">What is Your Note?</h4>
                            </div>
                            <div class="modal-body">
                                {{#each this.notes}}
                                {{!-- start panel inside modal body: --}}
                                <div class="row">
                                    
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                            {{this.body}}
                                            <form class="navbar-form navbar-right" method="POST" action="/notes/delete/{{this.id}}?_method=DELETE">
                                                <button type="submit" class="btn btn-default">Delete Note</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}

                                <div class="row">
                                    <form class="navbar-form navbar-left" action="/notes/save/{{this.id}}" method="POST">
                                        <div class="form-group">
                                            <label for="apptNotes">Notes</label>
                                            <textarea class="form-control" rows="3" id="apptNotes" name="body" placeholder="Notes"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-default">Save</button>
                                    </form>
                                </div>

                                {{!-- end modal body --}}
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                            {{!-- end modal content --}}
                        </div>
                        {{!-- end modal dialog --}}
                    </div>
                    {{!-- end modal --}}
                </div>
                {{/each}} {{!-- end articles --}}
            </div>
            {{!-- end col-9 --}}
        </div>

        <div class="col-1"></div>
        {{!-- end row --}}
    </div>
    {{!-- end container --}}
</div>