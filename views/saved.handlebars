

<div class="album py-5">
    <div class="container">

        <div class="row d-flex">
            {{#each saved}}
            <div class="col-md-4 d-flex">

                <div class="card bg-dark mb-4 box-shadow">

                    <div class="card-body">

                        <h2 class="card-title">{{this.title}}</h2>

                        <p class="summary card-text">{{this.summary}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <form method="POST" action="/articles/delete/{{this.id}}?_method=PUT">
                                    <button type="submit" class="save btn btn-sm btn-outline-secondary" data-id={{this._id}}>Delete Article</button>
                                </form>

                                <form method="POST" action="/notes/save/{{this.notes}}?_method=POST">
                                    <button type="button" class="save btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#myModal{{this.id}}">Notes</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>

    {{!-- end container --}}
    </div>
</div>



            <!-- Modal -->
            {{#each saved}}
            <div class="modal fade" tabindex="-1" id="myModal{{this.id}}" role="dialog">
                <div class="modal-dialog" role="document">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                {{!-- <span aria-hidden="true">&times;</span> --}}
                            </button>
                            {{!-- <h4 class="modal-title">What I think about Title:
                                <span class="titles-art">{{this.title}}</span>
                            </h4> --}}
                            <h4 class="modal-title">Notes on: {{this.title}}</h4>
                            
                        </div>
                        <div class="modal-body">
                            {{#each this.notes}} {{!-- start panel inside modal body: --}}
                                <h3 class="note-text">{{this.body}}</h3>
                                    <form class="navbar-form " method="POST" action="/notes/delete/{{this.id}}?_method=DELETE">
                                        <button type="submit" class="btn btn-outline-danger btn-sml">Delete</button>
                                    </form>
                            {{/each}}

                                <form class="navbar-form navbar-left" action="/notes/save/{{this.id}}" method="POST">
                                    <div class="form-group">
                                        <label for="apptNotes"></label>
                                        <textarea class="form-control" id="apptNotes" name="body" placeholder="Notes" rows="3"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-success ">Save</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </form>

                            {{!-- end modal body --}}
                        </div>
                        {{!-- end modal content --}}
                    </div>
                    {{!-- end modal dialog --}}
                </div>
                {{!-- end modal --}}
            </div>
            {{/each}} 
            {{!-- end articles --}}
